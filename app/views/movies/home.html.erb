
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>All <strong>movies</strong>!</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
    <a class="btn btn-flat" href="#">Details</a>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div>
      <% @movies.each do |movie| %>
        <%= movie.title %>
        <%= movie.overview %>
        <%= movie.oposter_url %>
        <%= movie.rating %>
      <% end %>
    </div>
  </div>
</div>
